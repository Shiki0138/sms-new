{
  "name": "sms-testing-suite",
  "version": "1.0.0",
  "description": "Comprehensive testing suite for SMS Salon Management System",
  "scripts": {
    "test": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:unit": "jest --config=jest.unit.config.js",
    "test:integration": "jest --config=jest.integration.config.js",
    "test:e2e": "playwright test",
    "test:api": "newman run api-tests/sms-api.postman_collection.json",
    "test:security": "npm run test:security:deps && npm run test:security:auth",
    "test:security:deps": "npm audit --audit-level=moderate",
    "test:security:auth": "node security/auth-security.test.js",
    "test:performance": "k6 run performance/load-test.js",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:smoke": "jest --testNamePattern='smoke'",
    "test:regression": "jest --testNamePattern='regression'",
    "lint:tests": "eslint tests/ --ext .js",
    "format:tests": "prettier --write tests/**/*.js",
    "clean:coverage": "rimraf coverage",
    "clean:reports": "rimraf test-results",
    "setup:test-env": "node setup/test-environment.js",
    "teardown:test-env": "node teardown/test-cleanup.js"
  },
  "dependencies": {
    "@playwright/test": "^1.40.0",
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "newman": "^6.0.0",
    "supertest": "^6.3.3"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "eslint": "^8.52.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "author": "SMS Testing Team",
  "license": "MIT"
}