{
  "systemKPIs": {
    "performance": {
      "api_response_time": {
        "target": "<200ms",
        "warning": "200-500ms",
        "critical": ">500ms",
        "description": "Average API response time for CRUD operations"
      },
      "frontend_load_time": {
        "target": "<1.5s",
        "warning": "1.5-3s",
        "critical": ">3s",
        "description": "Initial page load time including assets"
      },
      "database_query_time": {
        "target": "<50ms",
        "warning": "50-100ms",
        "critical": ">100ms",
        "description": "Average query execution time"
      },
      "concurrent_users": {
        "target": "≥50",
        "warning": "25-50",
        "critical": "<25",
        "description": "Maximum concurrent users supported"
      }
    },
    "reliability": {
      "uptime": {
        "target": "≥99.9%",
        "warning": "99.0-99.9%",
        "critical": "<99.0%",
        "description": "System availability percentage"
      },
      "error_rate": {
        "target": "<0.1%",
        "warning": "0.1-1%",
        "critical": ">1%",
        "description": "Percentage of failed requests"
      },
      "auth_success_rate": {
        "target": "≥99.5%",
        "warning": "98-99.5%",
        "critical": "<98%",
        "description": "Authentication success rate"
      }
    },
    "scalability": {
      "memory_usage": {
        "target": "<70%",
        "warning": "70-85%",
        "critical": ">85%",
        "description": "System memory utilization"
      },
      "cpu_usage": {
        "target": "<60%",
        "warning": "60-80%",
        "critical": ">80%",
        "description": "CPU utilization under load"
      },
      "storage_growth": {
        "target": "<10MB/month",
        "warning": "10-50MB/month",
        "critical": ">50MB/month",
        "description": "Data storage growth rate"
      }
    },
    "user_experience": {
      "ui_responsiveness": {
        "target": "<100ms",
        "warning": "100-300ms",
        "critical": ">300ms",
        "description": "UI element response time to user actions"
      },
      "form_validation_time": {
        "target": "<50ms",
        "warning": "50-100ms",
        "critical": ">100ms",
        "description": "Real-time form validation response"
      },
      "data_refresh_time": {
        "target": "<500ms",
        "warning": "500ms-1s",
        "critical": ">1s",
        "description": "Time to refresh dashboard data"
      }
    }
  },
  "businessKPIs": {
    "salon_operations": {
      "appointment_processing_time": {
        "target": "<30s",
        "warning": "30-60s",
        "critical": ">60s",
        "description": "Time to create/modify appointments"
      },
      "customer_search_time": {
        "target": "<2s",
        "warning": "2-5s",
        "critical": ">5s",
        "description": "Customer database search response"
      },
      "report_generation_time": {
        "target": "<10s",
        "warning": "10-30s",
        "critical": ">30s",
        "description": "Time to generate business reports"
      }
    },
    "user_adoption": {
      "daily_active_users": {
        "target": ">80%",
        "warning": "60-80%",
        "critical": "<60%",
        "description": "Percentage of registered users active daily"
      },
      "feature_utilization": {
        "target": ">70%",
        "warning": "50-70%",
        "critical": "<50%",
        "description": "Percentage of features actively used"
      },
      "user_session_duration": {
        "target": ">15min",
        "warning": "10-15min",
        "critical": "<10min",
        "description": "Average user session length"
      }
    }
  }
}